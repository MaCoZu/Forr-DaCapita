---
import Navbar from "../components/Navbar.astro";
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
import Rings from "../components/Rings.astro";

interface Props {
    title: string;
}
const today = new Date();

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>

        <ClientRouter />
    </head>
    <body
        class="flex flex-col min-h-screen bg-amber-50 mx-4 sm:mx-[9.5rem]"
    >
        <Navbar />
        <!-- <Rings /> -->
        <main class="flex-grow mb-20 md:mb-40">
            <slot />
        </main>
        <footer class="w-full py-4 text-center mt-auto">
            <div class="container">
                &copy; {today.getFullYear()} Forr√≥ da Capita. All rights reserved.
            </div>
        </footer>
    </body>
</html>
